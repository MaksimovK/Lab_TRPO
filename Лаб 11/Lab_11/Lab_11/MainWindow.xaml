<Window x:Class="Lab_11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_11"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="local:Element">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.Setters>
                        <Setter Property="Panel.ZIndex" Value="99" />
                    </Trigger.Setters>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <ScrollViewer>
        <WrapPanel>
            <local:Element x:Name="Stack1" />
            <local:Element x:Name="Stack2"/>
            <local:Element x:Name="Stack3" />
            <local:Element x:Name="Stack4" />
            <local:Element x:Name="Stack5" />
            <local:Element x:Name="Stack6" />
            <local:Element x:Name="Stack7" />
            <local:Element x:Name="Stack8" />
            <local:Element x:Name="Stack9"/>

        </WrapPanel>
    </ScrollViewer>
</Window>
